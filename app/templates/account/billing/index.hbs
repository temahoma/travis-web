<section class='billing'>
  {{#unless model.subscriptions}}
    {{new-subscription-button account=account}}
    <h2>Plan Overview</h2>
    {{#if model.trials}}
      <h3 data-test-plan-name>Trial</h3>
      <p data-test-plan-concurrency>{{pluralize model.trials.buildsRemaining 'build'}} remaining</p>
    {{else if model.trials.status.isEnded}}
      <p class="source manual">The trial period has ended, please start a subscription</p>
    {{else}}
      <p class="source manual">Your trial will begin once a build is run.</p>
    {{/if}}

  {{/unless}}
  {{#if model.subscriptions.manageSubscription}}
    {{manage-subscription-button subscription=model.subscriptions account=account}}
  {{/if}}
  {{#if model.subscriptions.isSubscribed}}
    <section class='plan'>
      <h3 data-test-plan-name>{{model.subscriptions.plan.name}}</h3>
      <p data-test-plan-concurrency>{{pluralize model.subscriptions.plan.builds 'concurrent job'}}</p>
      <p>Renewing on {{moment-format model.subscriptions.validTo 'MMMM D, YYYY'}}</p>
    </section>
    <h2>Billing Information</h2>
    <section class='row'>
      {{#if model.subscriptions.isStripe}}
        <section class='contact'>
          <h3>Billing Contact</h3>
          {{billing-address billingInfo=model.subscriptions.billingInfo}}
        </section>
      {{/if}}
      <section class='payment'>
        <h3>Payment details</h3>
        {{payment-details subscription=model.subscriptions}}
      </section>
    </section>
  {{else if model.subscriptions}}
    <span data-test-expiry-message>
      {{#if model.subscriptions.isExpired}}
        You had a {{model.subscriptions.sourceWords}} subscription that expired on {{moment-format model.subscriptions.validTo 'MMMM D, YYYY'}}.
      {{else}}
        This subscription has been canceled by you and is valid through {{moment-format model.subscriptions.validTo 'MMMM D, YYYY'}}.
      {{/if}}
      {{#if model.subscriptions.isManual}}
        {{manual-subscription-help}}
      {{/if}}
    </span>
    {{#if model.subscriptions.isResubscribable}}
      {{resubscribe-button subscription=model.subscriptions account=account}}
    {{/if}}
    {{#if model.subscriptions.isGithub}}
      <a href={{config.marketplaceEndpoint}} class='button--blue marketplace-button'>Manage on GitHub Marketplace</a>
    {{/if}}
  {{/if}}
</section>

{{#if invoices}}
  <section class='invoices'>
    <h2>Invoice History</h2>
    <p>
      {{svg-jar 'icon-help' class='icon-help' alt=''}} Having trouble with your invoices?
      <a href='{{ config.urls.support }}' title='Email the Travis support team' {{action 'helpscoutTrigger'}}>Weâ€™re happy to help</a>.
    </p>
      <ul>
        {{#each (sort-by 'createdAt:desc' invoices) as |invoice|}}
          <li><a data-test-invoice href={{model.subscriptions.invoice.url}}>{{svg-jar 'icon-invoice' class='icon'}} {{model.subscriptions.invoice.id}} {{moment-format model.subscriptions.invoice.createdAt 'MMMM YYYY'}}</a></li>
        {{/each}}
      </ul>
  </section>
{{/if}}
